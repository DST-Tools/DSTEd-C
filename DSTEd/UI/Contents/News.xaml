<UserControl x:Class="DSTEd.UI.Contents.News"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:DSTEd.UI.Contents"
    mc:Ignorable="d" 
    Background="#7F000000" Margin="0,0,0,10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Name="title" Foreground="#FFFFFF" Text="" FontWeight="Bold" TextTrimming="CharacterEllipsis" FontSize="20" Margin="10" />
        <Label Name="date" Foreground="#DDDDDD" Content="" FontSize="16" Grid.Column="1" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid Name="content" Grid.Row="2" Grid.ColumnSpan="2" Margin="10"></Grid>
    </Grid>
</UserControl>
