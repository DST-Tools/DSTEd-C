<Window x:Class="DSTEd.UI.Steam.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DSTEd.UI.Steam"
    xmlns:Core="clr-namespace:DSTEd.Core"
    mc:Ignorable="d"
    Title="{Core:I18N_XAML Login}" Height="450" Width="800">
    <Grid>
        <Label Content="{Core:I18N_XAML Username}" HorizontalAlignment="Left" Margin="83,99,0,0" VerticalAlignment="Top"/>
        <Label Content="{Core:I18N_XAML Password}" HorizontalAlignment="Left" Margin="83,151,0,0" VerticalAlignment="Top"/>
        <TextBox Name="username" HorizontalAlignment="Left" Height="24"  Width="120" Margin="168,101,0,294"/>
        <TextBox Name="password" HorizontalAlignment="Left" Height="24" Width="120" Margin="162,153,0,242"/>
        <Button Content="{Core:I18N_XAML Cancel}" Click="OnCancel" HorizontalAlignment="Left" Margin="162,316,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="{Core:I18N_XAML Login}" Click="OnLogin" HorizontalAlignment="Left" Margin="283,316,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
